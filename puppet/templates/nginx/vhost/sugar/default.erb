server {
  # listen 80 default_server;
  # server_name_in_redirect off;
  server_name <%= @name %> *.<%= @name %>;

  access_log  <%= @vhost['access_log'] %>;
  error_log   <%= @vhost['error_log'] %>;

  root <%= @vhost['root'] %>;
  if ($http_host != "<%= @name %>") {
    rewrite ^ $scheme://<%= @name %>$request_uri permanent;
  }
  index index.php index.html;
  location = /favicon.ico {
    log_not_found off;
    access_log off;
  }
  location = /robots.txt {
    allow all;
    log_not_found off;
    access_log off;
  }

  # Deny all attempts to access hidden files such as .htaccess, .htpasswd, .git, etc.

  location ~ /\. {
    deny all;
    access_log off;
    log_not_found off;
  }

  location ~ \.(vagrant|staging|production)$ {
    deny all;
    access_log off;
    log_not_found off;
  }

  location / {
    try_files $uri $uri/ /index.php?$args;
  }
  
  location ~* \.(jpg|jpeg|png|gif|css|js|ico)$ {
    expires max;
    log_not_found off;
  }

  # Begin SugarCRM restrictions

  location ~* \.log$ {
    deny all;
  }
  location ~ /not_imported_.*\.txt$ {
    deny all;
  }
  location ~ /(soap|cache|xtemplate|data|examples|include|log4php|metadata|modules)/.*\.(php|tpl)$ {
    deny all;
  }
  location ~ /emailmandelivery\.php$ {
    deny all;
  }
  location ~ /upload {
    deny all;
  }
  location ~ /custom/(blowfish|diagnostic) {
    deny all;
  }
  location ~ /files\.md5$ {
    deny all;
  }

  # End SugarCRM restrictions

  location ~ \.php$ {
    try_files $uri =404;
    include fastcgi_params;
    fastcgi_param  SCRIPT_FILENAME $document_root$fastcgi_script_name;

    fastcgi_read_timeout 300s;

    # BEGIN UPGRADE SETTINGS
    # client_max_body_size  0;
    # client_body_timeout   3600s;
    # fastcgi_read_timeout  3600s;
    # END UPGRADE SETTINGS

    if ($uri !~ "^/upload/") {
      fastcgi_pass <%= @vhost['fastcgi_pass'] %>;
    }
  }

}